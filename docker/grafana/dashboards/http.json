{
  "uid": "http-overview",
  "title": "HTTP RPS & Latency (Nginx/Loki)",
  "tags": ["http", "nginx", "loki"],
  "timezone": "browser",
  "schemaVersion": 30,
  "version": 1,
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Requests per second",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "rate({service=\"nginx\"}[1m])"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "thresholds": { "mode": "absolute", "steps": [ { "color": "green", "value": null } ] }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "hidden" },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "type": "timeseries",
      "title": "Latency (p50 / p95 / p99)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "avg(quantile_over_time(0.5, {service=\"nginx\"} | json | unwrap request_time [30m]))",
          "legendFormat": "p50"
        },
        {
          "refId": "B",
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "avg(quantile_over_time(0.95, {service=\"nginx\"} | json | unwrap request_time [30m]))",
          "legendFormat": "p95"
        },
        {
          "refId": "C",
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "avg(quantile_over_time(0.99, {service=\"nginx\"} | json | unwrap request_time [30m]))",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 0.5 },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "type": "stat",
      "title": "HTTP 5xx per minute",
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 8 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "count_over_time({service=\"nginx\"} | json | status >= 500 and status < 600 [30m])"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      }
    }
  ]
}
