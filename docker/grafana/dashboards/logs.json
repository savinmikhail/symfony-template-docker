{
  "uid": "logs-overview",
  "title": "Application & Nginx Logs",
  "tags": ["logs", "loki"],
  "timezone": "browser",
  "schemaVersion": 30,
  "version": 1,
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "type": "logs",
      "title": "Nginx access logs",
      "gridPos": { "h": 12, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "{service=\"nginx\"}",
          "limit": 1000
        }
      ],
      "options": {
        "dedupStrategy": "none",
        "showLabels": true,
        "showTime": true,
        "wrapLogMessage": true
      }
    },
    {
      "type": "logs",
      "title": "PHP / Symfony logs",
      "gridPos": { "h": 12, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "{service=\"php\"}",
          "limit": 1000
        }
      ],
      "options": {
        "dedupStrategy": "none",
        "showLabels": true,
        "showTime": true,
        "wrapLogMessage": true
      }
    },
    {
      "type": "timeseries",
      "title": "HTTP error rate (nginx 5xx)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "sum(rate({service=\"nginx\"} | json | status >= 500 and status < 600 [5m]))",
          "legendFormat": "5xx/s"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 0.1 },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "hidden" },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "type": "timeseries",
      "title": "Application error logs (PHP)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "sum(rate({service=\"php\"} |= \"ERROR\" [5m]))",
          "legendFormat": "errors/s"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 0.1 },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "hidden" },
        "tooltip": { "mode": "single" }
      }
    }
  ]
}

